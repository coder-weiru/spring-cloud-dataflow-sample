#  --uri maven://org.baeldung.spring.cloud:spring-data-flow-logging-sink:jar:1.0.0-SNAPSHOT

#stream create --name file-to-log --definition 'file-connector | tika-extractor | log'
#stream deploy --name file-to-log

stream create opencalais-stream --definition "http --port=10101 --spring.cloud.stream.bindings.output.contentType='text/plain' | opencalais-extractor  --spring.cloud.stream.bindings.input.contentType='text/plain' | log" --deploy
stream deploy --name opencalais-stream
